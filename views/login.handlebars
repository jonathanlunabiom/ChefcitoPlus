<div class="flex align-middle justify-center m-0 p-0 ">
    <!-- Outer container with flexible layout -->
    <div class="max-w-lg my-6 bg-slate-600 p-6 rounded-lg">
        <!-- Container for login form -->
        <div id="login" class="text-center">
            <!-- Title for the login section -->
            <div class="text-lg text-center text-white pb-2">
                Login
            </div>
            <!-- Login form -->
            <form id="loginform">
                <!-- Input field for email -->
                <input type="text" id="user" placeholder="Email" class="rounded-sm px-2.5 col-lg-6 mt-2 mr-1.5" required>
                        
                <!-- Input field for password -->
                <input type="password" placeholder="Password" id="password" class="rounded-sm px-2.5 col-lg-6 mt-2" required>
                <div>
                    <!-- Login button -->
                    <button type="submit" title="Ingresar" name="Ingresar" class="bg-stone-500 text-white rounded-md px-2 mt-2 col-lg-6 col-10">Login</button>
                </div>
            </form>
            <!-- Link to the signup page -->
            <div class="pie-form text-white pt-2">
                <a href="/signup">Want an account? <span class="border-b pb-0.5">Sign up</span></a>
            </div>
        </div>
        <!-- "Go back" link -->
        <div class="inferior text-white">
            <a href="/" class="mt-2">Go back</a>
        </div>
    </div>
</div>
