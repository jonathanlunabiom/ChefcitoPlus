<div class="flex align-middle justify-center m-0 p-0 ">
    <!-- Outer container with flexible layout -->
    <div class="max-w-lg my-6 bg-slate-600 p-6 rounded-lg">
        <!-- Container for signup form -->
        <div id="login" class="text-center">
            <!-- Title for the signup section -->
            <div class="text-lg text-center text-white pb-2">
                Sign up
            </div>
            <!-- Signup form -->
            <form id="signup-form">
                <!-- Input field for name -->
                <input type="text" id="name" placeholder="Name" class="rounded-sm px-2.5 col-lg-6 mt-2 mr-1.5" required>

                <!-- Input field for last name -->
                <input type="text" id="lastname" placeholder="Last Name" class="rounded-sm px-2.5 col-lg-6 mt-2" required>

                <!-- Input field for email -->
                <input type="text" id="username-input-signup" placeholder="Email" class="rounded-sm px-2.5 col-lg-6 mt-2 mr-1.5" required>
                        
                <!-- Input field for password -->
                <input type="password" placeholder="Password" id="password-input-signup" class="rounded-sm px-2.5 col-lg-6 mt-2" required>
                <div>
                    <!-- Signup button -->
                    <button type="submit" title="Ingresar" name="Ingresar" class="bg-stone-500 text-white rounded-md px-2 mt-3 col-lg-6 col-10">Sign up</button>
                </div>        
            </form>
            <!-- Link to the login page -->
            <div class="pie-form text-white pt-2">
                <a href="/login">Got an account? <span class="border-b pb-0.5">Log in</span></a>
            </div>
        </div>
        <!-- "Go back" link -->
        <div class="inferior text-white">
            <a href="/" class="mt-2">Go back</a>
        </div>
    </div>
</div>

<!-- Include a JavaScript file for handling user signup -->
<script src="/public/js/signup.js"></script>